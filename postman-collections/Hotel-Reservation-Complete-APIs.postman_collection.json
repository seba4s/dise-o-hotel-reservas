					"name": "Check Availability - Single Room",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var json = {};",
									"try { json = pm.response.json(); } catch(e) {}",
									"if (Array.isArray(json) && json.length > 0) {",
									"  var first = json[0];",
									"  var id = first.id || first.roomId || first._id;",
									"  if (id) { pm.environment.set('roomId', id); pm.environment.set('roomNumber', first.roomNumber || ''); pm.test('roomId saved', function(){ pm.expect(id).to.not.be.undefined; }); }",
